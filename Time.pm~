#!/usr/bin/perl
package Time;
use strict;
use warnings;
use overload
    "\"\"" => \&_to_string,
    "+"    => \&_add,
    "-"    => \&_subtract,
    "=="   => \&_equals,
    "<"	   => \&_less_than,
    ">"    => \&_more_than,
    ">="   => \&_more_than_eq,
    "<="   => \&_less_than_eq;


sub new{
	my $class = shift;
	my $self = {
		_hour => validate_hour(shift),
		_minute => validate_minute(shift)
	};
	bless $self, $class;
	return $self;
};

sub get_hour{
	my $self = shift;
	return $self->{_hour};
};

sub get_minute{
	my $self = shift;
	return $self->{_minute};
};

sub validate_hour{
	my $hour = shift;
	return ($hour % 24);
};

sub validate_minute{
	my $minute = shift;
	return ($minute % 60);
};

sub _to_string{
	my $self = shift;
	return $self->{_hour} . ":" . $self->{_minute};
};

sub _add{
	my $self = shift;
	my $second = shift;
	my $total_hours = $self->get_hour()+$second->get_hour();
	my $total_minutes = $self->get_minute()+$second->get_minute();
	return new Time($total_hours, $total_minutes);
};

sub _equals{
	my $self = shift;
	my $second = shift;
	my $equal_hours = $self->get_hour() == $second->get_hour();
	my $equal_minutes = $self->get_minute() == $second->get_minute();
	return $equal_hours && $equal_minutes;
};

sub _subtract{
	my $self = shift;
	my $second = shift;
	my $subtract_hours = $self->get_hour() - $second->get_hour();
	my $subtract_minutes = $self->get_minute() - $second->get_minute();
	return new Time($subtract_hours,$subtract_minutes);
}

sub _less_than{
	my $self = shift;
	my $second = shift;
	my $less_hours = $self->get_hour() < $second->get_hour();
	my $less_minutes = $self->get_minute() < $second->get_minute();
	
	if($less_hours){
	 return 1;
	}
	else{
		my $equal_hours = $self->get_hour() == $second->get_hour();
		if($equal_hours && $less_minutes){
			return 1;		
		}
		else{
			return 0;
		}
	}
};

sub _more_than{
	my $self = shift;
	my $second = shift;
	$less_than = _less_than($self, $second);
	$equal = _equals($self,$second);
	return !($less_than || $equal);
}

sub _more_than_eq{
	my $self = shift;
	my $second = shift;
	$less_than = _less_than($self, $second);
	return !$less_than;
}

sub _less_than_eq{
	my $self = shift;
	my $second = shift;
	$less_than = _less_than($self, $second);
	$equals = _equals($self,$second);
	return $less_than && $equals;
}

1;
